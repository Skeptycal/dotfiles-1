; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true

; 4 space indentation
[**.css]
indent_size = 4

[**.md]
indent_size = 4

[*.js]
indent_size = 2

[*.py]
indent_size = 2

[**.rb]
indent_size = 2

[**.php]
indent_size = 4

[**.py]
indent_size = 4

[**.sh]
indent_size = 4
indent_style = tab

[**.sublime-settings]
indent_size = 2
indent_style = tab
